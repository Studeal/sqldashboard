<!-- Menu Nav-->
<nav class="navbar-inverse">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
        <ul class="nav navbar-nav">
            <li><a class="navbar-brand">Studeal <span class="sr-only"></span></a></li>
        </ul>

    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
            <li><a href="{{ path('app_home')}}">Dashboard <span class="sr-only"></span></a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li>{% if is_granted('ROLE_ADMIN')  %}
                    <a href="{{ path('app_admin_profile') }}"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></a>
                {% elseif is_granted('ROLE_USER') %}
                    <a href="{{ path('app_user_profile') }}"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></a>
                {% endif %}
            </li>
            <li><a href="{{  path('fos_user_security_logout') }}"><span class="glyphicon glyphicon-off" aria-hidden="true"></span></a></li>
        </ul>
    </div><!-- /.navbar-collapse -->
</nav>

<!-- SideBar  -->

<div id="sidebar" class="col-xs-2 sidebar">
    <div class="list-group">
        <!-- Large modal -->
        <button type="button" class="btn btn-default btn-block  col-xs-2 createdashboard " data-toggle="modal" data-target=".bs-example-modal-lg" >Create Dashboard</button>
        <!-- PopUp - Modal Create Dashboard Button -->
        <div class="modal fade bs-example-modal-lg popup" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header well">
                        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                        {#Les erreurs générales du formulaire.#}
                        {{ form_errors(form) }}
                        <div class="form-group">
                            {#Generate label.#}
                            {{ form_label(form.nameDash, "Create a name Dashboard", {'label_attr': {'class':'col-sm3 control-label'}}) }}
                            <div>
                            {#Generate input#}
                            {{ form_widget(form.nameDash, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        {#Generate button#}
                        {{ form_widget(form.add, {'attr': {'class': 'btn btn-primary' }}) }}
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



