<div class="col-xs-3 sidebar">
    <h2>My database</h2>

    <!-- Database display-->
    <div class="panel-group">
        {% for tableName, table in tables %}
            <div class="panel panel-default">
                <div class="panel-heading tableList">
                    <h4><a data-toggle="collapse" href="#collapse{{loop.index}}">{{ tableName }}</a></h4>
                </div>
                <div id="collapse{{loop.index}}" class="panel-collapse collapse">
                    <ul class="list-group" >
                        {% for field in table %}
                            <li class="list-group-item">{{ field.Field }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% endfor %}
    </div>
</div>