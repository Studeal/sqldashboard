{% extends "AppBundle::layout.html.twig" %}

{% block title %}Profile Admin{% endblock %}

{% block app_body %}
    <body>
    {# START Logged-in User Info #}
    <div id="userInfo" class="container-fluid">
        <div class="row">
            <div class="col-md-2 col-xs-4">
                {% if usr.image %}
                    <img src="{{ asset('assets/img/' ~ usr.image) }}" width="100px" height="100px" alt="Profile image">
                {% else %}
                    <img src="{{ asset('assets/img/user_img.png') }}" width="100px" height="100px" alt="Profile image">
                {% endif %}
            </div>

            <div class="col-md-4 col-xs-4">
                <div class="row">
                    <p><strong>First Name:</strong> {{ usr.firstName }}</p>
                </div>
                <div class="row">
                    <p><strong>Last Name:</strong> {{ usr.lastName }}</p>
                </div>
                <div class="row">
                    <p><strong>Email:</strong> {{ usr.email }}</p>
                </div>
                <div class="row">
                    <p><strong>Username:</strong> {{ usr.username }}</p>
                </div>
            </div>

            <div class="col-md-2 col-xs-2"></div>
            <div class="col-md-4 col-xs-0"></div>
        </div>
    </div>
    <br>
    {# END Logged-in User Info #}

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                {# START Tab Pane List #}
                <div id="tabbed-pane">
                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#mySettings">My Settings</a></li>
                    </ul>
                </div>
                {# END Tab Pane List #}

                {# START User Settings #}
                <h3>My Settings</h3>
                {{ form_start(form3, {'attr': {'novalidate': 'novalidate'}}) }}
                <div class="form-group">
                    {{ form_row(form3.firstName, { 'attr': {'class': 'form-control', 'value': usr.firstName} }) }}
                </div>
                <div class="form-group">
                    {{ form_row(form3.lastName, { 'attr': {'class': 'form-control', 'value': usr.lastName} }) }}
                </div>
                <div class="form-group">
                    {{ form_row(form3.username, { 'attr': {'class': 'form-control', 'value': usr.username} }) }}
                </div>
                <div class="form-group">
                    {{ form_row(form3.email, { 'attr': {'class': 'form-control', 'value': usr.email} }) }}
                </div>
                <div class="form-group">
                    {{ form_row(form3.plainPassword.first, {label: 'Password', 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    {{ form_row(form3.plainPassword.second, {label: 'Repeat Password', 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    {{ form_row(form3.image, { 'attr': {'type': 'file'} }) }}
                </div>
                <div class="form-group hidden">
                    {{ form_row(form3.roles) }}
                </div>
                {{ form_widget(form3.Submit, { 'attr': {'class': 'btn btn-default pull-right'} }) }}
                {{ form_end(form3) }}
                {# END User Settings #}
            </div>
            <br>
        </div>
    </div>
    </body>
{% endblock %}