<!-- SideBar  -->

<div id="sidebar" class="col-xs-2 sidebar">
    <div class="list-group">
<div>{{ dump(user) }}</div>
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" href="#collapse3">My Dashboard</a>
                    </h4>
                </div>
                <div id="collapse3" class="panel-collapse collapse">
                    <div class="panel-body">Panel Body</div>
                    <div class="panel-footer">Panel Footer</div>
                </div>
            </div>
        </div>
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" href="#collapse2">Share Dashboard</a>
                    </h4>
                </div>
                <div id="collapse2" class="panel-collapse collapse">
                    <div class="panel-body">Panel</div>
                    <div class="panel-footer">Panel Footer</div>
                </div>
            </div>
        </div>

        <!-- Large modal -->
        <button type="button" class="btn btn-default block panel-title col-xs-10   createdashboard " data-toggle="modal" data-target=".bs-example-modal-lg" >Create Dashboard</button>
        <!-- PopUp - Modal Create Dashboard Button -->
        <div class="modal fade bs-example-modal-lg popup" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header well">
                        {{ form_start(form) }}
                        {#Les erreurs générales du formulaire.#}
                        {{ form_errors(form) }}
                        <div class="form-group">
                            {#Generate label.#}
                            {{ form_label(form.name, "Create a name Dashboard", {'label_attr': {'class':'col-sm3 control-label', 'value':''}}) }}
                            {{ form_widget(form.creator, {'attr': {'class': 'form-control', 'value' : user}}) }}
                            <div>
                                {#Generate input#}
                                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div style="display: none">
                            {{ form_widget(form.UpdateName, {'attr': {'class':'btn btn-primary '}}) }}
                        </div>

                    </div>
                    {#Generate button#}
                    {{ form_widget(form.add, {'attr': {'class': 'btn btn-primary ' }}) }}
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>